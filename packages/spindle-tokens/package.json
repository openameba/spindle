    "jest": "^29.0.0",
    "jsonabc": "^2.3.1",
    "lodash.setwith": "^4.3.2",
    "make-dir": "^4.0.0",
    "style-dictionary": "^4.0.0",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "ts-jest": "29.2.5"
