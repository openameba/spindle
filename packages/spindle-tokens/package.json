{
  "name": "@openameba/spindle-tokens",
  "version": "1.10.0",
  "description": "Spindle design tokens.",
  "homepage": "https://github.com/openameba/spindle#readme",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "style": "spindle-tokens.css",
  "files": [
    "dist/**",
    "spindle-tokens.png",
    "spindle-tokens.css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/openameba/spindle",
    "directory": "packages/spindle-tokens"
  },
  "scripts": {
    "test": "tsc --noEmit && vitest run",
    "stylelint": "stylelint dist/**/*.css",
    "build": "node build-tokens.mjs",
    "export": "run-p export:*",
    "export:animation": "tsx scripts/animation.ts",
    "export:color": "tsx scripts/color.ts",
    "export:spacing": "tsx scripts/spacing.ts",
    "cp": "npx cpx dist/css/spindle-tokens.css ./",
    "prepublishOnly": "pnpm build && pnpm cp"
  },
  "bugs": {
    "url": "https://github.com/openameba/spindle/issues"
  },
  "devDependencies": {
    "@figma/rest-api-spec": "0.35.0",
    "@types/lodash.setwith": "4.3.9",
    "@types/node": "24.10.9",
    "@vitest/ui": "4.0.17",
    "jsonabc": "2.3.1",
    "lodash.setwith": "4.3.2",
    "make-dir": "4.0.0",
    "style-dictionary": "5.2.0",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "tsx": "4.21.0",
    "vitest": "4.0.17"
  }
