{
  "name": "@openameba/spindle-mcp-server",
  "version": "1.5.2",
  "description": "MCP server for Ameba Design System Spindle",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "spindle-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "npm run copy-assets && tsc",
    "copy-assets": "node scripts/copy-assets.js",
    "test": "npm run copy-assets && vitest run",
    "test:watch": "npm run build && vitest",
    "test:coverage": "npm run build && vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "design-system",
    "ameba",
    "spindle"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/openameba/spindle",
    "directory": "packages/spindle-mcp-server"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "SEE LICENSE IN README.md",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@cfworker/json-schema": "4.1.1",
    "@openameba/spindle-tokens": "workspace:*",
    "@openameba/spindle-ui": "workspace:*",
    "@types/node": "24.10.13",
    "cpx2": "8.0.0",
    "vitest": "4.0.18"
  }
}
