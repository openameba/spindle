{
  "name": "spindle",
  "private": true,
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "run-p codecheck test:packages",
    "test:packages": "vitest run",
    "codecheck": "run-p check:* lint:*",
    "check:code": "biome check",
    "lint": "run-p lint:*",
    "lint:css": "stylelint '**/*.css'",
    "lint:yaml": "yamllint .github/workflows/*.yml",
    "lint:packages": "pnpm -r --parallel lint",
    "lint:text": "textlint --quiet .",
    "fix": "run-p fix:*",
    "fix:code": "biome check --write",
    "fix:css": "stylelint '**/*.css' --fix",
    "fix:packages": "pnpm -r --parallel format",
    "fix:text": "textlint --fix .",
    "bootstrap": "pnpm install",
    "build": "run-s build:*",
    "build:package": "pnpm -r --parallel build",
    "build:extensionReplace": "jscodeshift -t ./bin/outputExtensionReplace.js packages/*/dist/** --extensions=mjs",
    "prepare": "is-ci || husky install",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@commitlint/config-pnpm-scopes": "20.1.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jscodeshift": "17.3.0",
    "lint-staged": "16.2.7",
    "npm-run-all2": "8.0.4",
    "pnpm": "10.26.0",
    "prettier": "3.7.4",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1",
    "stylelint-order": "7.0.0",
    "stylelint-selector-bem-pattern": "4.0.1",
    "textlint": "15.5.0",
    "textlint-rule-preset-ameba": "openameba/textlint-rule-preset-ameba#v0.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.16",
    "yaml-lint": "1.7.0"
  },
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "*.css": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true",
      "stylelint"
    ],
    "*.{md,mdx}": [
      "textlint --quiet"
    ],
    ".github/workflows/*.yml": [
      "yamllint"
    ]
  }
}
