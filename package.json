{
  "name": "spindle",
  "private": true,
  "scripts": {
    "test": "run-p codecheck test:packages",
    "test:packages": "vitest run",
    "codecheck": "run-p check:* lint:*",
    "check:code": "biome check",
    "lint": "run-p lint:*",
    "lint:css": "stylelint '**/*.css'",
    "lint:yaml": "yamllint .github/workflows/*.yml",
    "lint:packages": "lerna run lint",
    "lint:text": "textlint --quiet .",
    "fix": "run-p fix:*",
    "fix:code": "biome check --write",
    "fix:css": "stylelint '**/*.css' --fix",
    "fix:packages": "lerna run format",
    "fix:text": "textlint --fix .",
    "bootstrap": "lerna bootstrap",
    "build": "run-s build:*",
    "build:package": "lerna run build",
    "build:extensionReplace": "jscodeshift -t ./bin/outputExtensionReplace.js packages/*/dist/** --extensions=mjs",
    "prepare": "is-ci || husky install",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/config-lerna-scopes": "20.0.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jscodeshift": "17.3.0",
    "lerna": "9.0.1",
    "lint-staged": "16.2.7",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "stylelint-order": "7.0.0",
    "stylelint-selector-bem-pattern": "4.0.1",
    "textlint": "15.4.0",
    "textlint-rule-preset-ameba": "openameba/textlint-rule-preset-ameba#v0.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.10",
    "yaml-lint": "1.7.0"
  },
  "engines": {
    "node": ">=22"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react/**",
      "**/@testing-library/**",
      "**/@storybook/**",
      "**/@types/**",
      "**/webpack/**"
    ]
  },
  "resolutions": {
    "zod": "3.25.76",
    "superstatic": "10.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "*.css": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true",
      "stylelint"
    ],
    "*.{md,mdx}": [
      "textlint --quiet"
    ],
    ".github/workflows/*.yml": [
      "yamllint"
    ]
  }
}
