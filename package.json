{
  "name": "spindle",
  "private": true,
  "scripts": {
    "test": "run-p lint format test:*",
    "test:packages": "lerna run test",
    "test:bin": "jest bin",
    "lint": "run-p lint:*",
    "lint:script": "biome check",
    "lint:yaml": "yamllint .github/workflows/*.yml",
    "lint:packages": "lerna run lint",
    "lint:text": "textlint --quiet .",
    "format": "prettier --check 'packages/**/src/**/*.css'",
    "fix": "run-p fix:*",
    "fix:script": "biome check --write",
    "fix:packages": "lerna run format",
    "fix:css": "prettier --write 'packages/**/src/**/*.css'",
    "fix:text": "textlint --fix .",
    "bootstrap": "lerna bootstrap",
    "build": "run-s build:*",
    "build:package": "lerna run build",
    "build:extensionReplace": "jscodeshift -t ./bin/outputExtensionReplace.js packages/*/dist/** --extensions=mjs",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/config-lerna-scopes": "19.8.1",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jest": "29.7.0",
    "jscodeshift": "17.3.0",
    "lerna": "8.2.4",
    "npm-run-all2": "8.0.4",
    "prettier": "3.3.3",
    "textlint": "15.2.2",
    "textlint-rule-preset-ameba": "openameba/textlint-rule-preset-ameba#v0.5.1",
    "typescript": "5.9.2",
    "yaml-lint": "1.7.0"
  },
  "engines": {
    "node": ">=22"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react/**",
      "**/@testing-library/**",
      "**/@storybook/**",
      "**/@types/**",
      "**/webpack/**"
    ]
  },
  "resolutions": {
    "zod": "3.24.2"
  }
}
