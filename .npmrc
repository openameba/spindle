# Security and trust
trust-policy=no-downgrade

# Peer dependencies handling
strict-peer-dependencies=false
auto-install-peers=false

# Performance
prefer-offline=true

# Scripts - disable by default for security
# Run explicit rebuild for packages that need postinstall (e.g., esbuild, @swc/core)
ignore-scripts=true

# Hoisting configuration
# pnpm uses isolated node_modules by default, but some tools may need specific packages hoisted
# public-hoist-pattern[]=*react*
# public-hoist-pattern[]=*@testing-library*
# public-hoist-pattern[]=*@storybook*
# public-hoist-pattern[]=*@types*
# public-hoist-pattern[]=*webpack*

# Package updates (align with Renovate's security:minimumReleaseAgeNpm)
# 3 days = 4320 minutes
minimum-release-age=4320
